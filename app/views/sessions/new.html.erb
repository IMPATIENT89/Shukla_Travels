<div class="container-fluid py-5 bg-light min-vh-100 d-flex align-items-center">
  <div class="row justify-content-center w-100">
    <div class="col-md-8 col-lg-6 col-xl-5">
      <% if logged_in_as_host? || logged_in_as_customer? %>
        <div class="alert alert-warning text-center" role="alert">
          <h4 class="alert-heading">Please Log Out to Continue</h4>
          <p>You are currently logged in. To sign in as a customer, please log out first.</p>
        </div>
      <% else %>
        <div class="card shadow-lg">
          <div class="card-body p-5">
            <h2 class="card-title text-center mb-4"><strong>Sign In As Customer</strong></h2>
            <%= render 'form' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
