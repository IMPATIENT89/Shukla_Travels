<body class="signbody" id="loginbody">  
  <% if logged_in_as_host? || logged_in_as_customer?%>
    <h1> Please Log out to continue</h1>
  <% else %>
    <div class="input-group justify-content-center ">
      <div class="col-lg-5 mt-5" id="login-container">
        <div class="container text-center">
          <h1 class="ms-3"><strong> Sign In As Customer </strong></h1>
        </div>
        <%= render 'form' %>
      </div>
    </div>
  <% end %>
</body>
