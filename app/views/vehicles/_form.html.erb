<div class="container" id="cnterror">
  <%= render 'shared/errors', obj: @vehicle %>
</div>
<div class="container mt-3" id="cntvehnew"> 
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: @vehicle, local: true) do |form| %> 
        <div class="form-group row mt-3">
          <%= form.label :car_name, "Write Car name", class: "col-6 col-form-label text-light " %>
          <div class="col-14">
            <%= form.text_field :car_name, class: "form-control shadow mb-4 bg-white rounded", placeholder: "eg. Swift Dzire" %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :vehicle_no, "Your Vehicle Number", class: "col-6 col-form-label text-light " %>
          <div class="col-14">
            <%= form.text_field :vehicle_no, class: "form-control shadow mb-4 bg-white rounded", placeholder: "eg. AB CD 0000" %>
          </div>
        </div>     
        <div class="form-group row">
          <%= form.label :registration_no, "Your vehicle registration number", class: "col-6 col-form-label text-light " %>
          <div class="col-14"> 
            <%= form.text_field :registration_no, class: "form-control shadow mb-4 bg-white rounded", placeholder: "Registration number from the registration certificate" %>
          </div>
        </div> 
        <div class="form-group row">
          <%= form.label :no_of_seats, "Number of seats", class: "col-6 col-form-label text-light " %>
          <div class="col-14"> 
            <%= form.text_field :no_of_seats, class: "form-control shadow mb-4 bg-white rounded", placeholder: "Number of seats available in your vehicle" %>
          </div>
        </div>    
        <div class="input-group justify-content-center mb-3">
          <%= form.submit(@vehicle.new_record? ? "Confirm Registration!" : "Update Vehicle!", class: "btn btn-outline-light btn-lg text-center") %>
        </div>
      <% end %>
    </div>
  </div>
</div>