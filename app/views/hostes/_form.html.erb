<div class="container" id="cnterror">
  <%= render 'shared/errors', obj: @hoste %>
</div>
<div class="container" id="cntsgnup">
  <div class="row justify-content-center">
    <div class="col-9">
      <%= form_with(model: @hoste, local: true) do |form| %>
        <div class="form-group row mt-3">
          <%= form.label :host_full_name, "Your Full Name", class: "col-6 col-form-label text-light " %>
          <div class="col-14">
            <%= form.text_field :host_full_name, class: "form-control shadow mb-4 bg-white rounded", placeholder: "Enter your full name" %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :email, "Email", class: "col-6 col-form-label text-light " %>
          <div class="col-14"> 
            <%= form.email_field :email, class: "form-control shadow mb-4 bg-white rounded", placeholder: "Enter your email address" %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :phone, "Phone", class: "col-6 col-form-label text-light " %>
          <div class="col-14"> 
            <%= form.text_field :phone, class: "form-control shadow mb-4 bg-white rounded", placeholder: "Enter your phone number" %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :password, class: "col-6 col-form-label text-light " %>
          <div class="col-14"> 
            <%= form.password_field :password, class: "form-control shadow mb-4 bg-white rounded", placeholder: "Choose a password" %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :password_confirmation, "Confirm Password", class: "col-6 col-form-label text-light " %>
          <div class="col-14"> 
            <%= form.password_field :password_confirmation, class: "form-control shadow mb-4 bg-white rounded", placeholder: "Enter the same password" %>
          </div>
        </div>
        <div class="form-group row">
          <%= form.label :no_of_cars, "Number of cars", class: "col-6 col-form-label text-light " %>
          <div class="col-14"> 
            <%= form.text_field :no_of_cars, class: "form-control shadow mb-4 bg-white rounded", placeholder: "Enter the number of cars that you want to be rented" %>
          </div>
        </div>   
        <div class="input-group justify-content-center mb-3">
          <%= form.submit(@hoste.new_record? ? "Sign Up!" : "Confirm Edit!", class: "btn btn-outline-light btn-lg text-center") %>
        </div>
      <% end %>
    </div>
  </div>
</div>