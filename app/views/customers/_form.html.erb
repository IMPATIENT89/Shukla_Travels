<div id="cnterror">
  <%= render 'shared/errors', obj: @customer %>
</div>

<%= form_with(model: @customer, local: true, class: "needs-validation", novalidate: true) do |form| %>
  <div class="mb-3">
    <%= form.label :customer_full_name, "Your Full Name", class: "form-label text-dark" %>
    <%= form.text_field :customer_full_name, class: "form-control", placeholder: "Enter your full name", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :email, "Email", class: "form-label text-dark" %>
    <%= form.email_field :email, class: "form-control", placeholder: "Enter your email address", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :phone, "Phone", class: "form-label text-dark" %>
    <%= form.text_field :phone, class: "form-control", placeholder: "Enter your phone number", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :password, class: "form-label text-dark" %>
    <%= form.password_field :password, class: "form-control", placeholder: "Choose a password", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :password_confirmation, "Confirm Password", class: "form-label text-dark" %>
    <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Enter the same password", required: true %>
  </div>

  <div class="d-grid gap-2 mb-4">
    <%= form.submit(@customer.new_record? ? "Sign Up!" : "Update Profile!", class: "btn btn-primary btn-lg") %>
  </div>
<% end %>

<hr>

<% if @customer.new_record? %>
  <div class="d-grid gap-2 text-center">
    <%= button_to '/auth/google_oauth2', data: { turbo: false }, class: "btn btn-outline-dark btn-lg", id: "login-with-google-btn" do %>
      <%= image_tag "google-logo.png", style: "height: 24px", class: "me-2" %>
      Continue with Google
    <% end %>
  </div>
<% end %>